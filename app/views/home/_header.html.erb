<header>
  <div class="container">
    <nav>
      <%= link_to root_path do %>
  <%= image_tag "black_diamond.png", class: "navbar-brand-image", width: "35", height: "35" %>
  
      <% end %>

      </a>
      <ul>
        <li class="dropdown">
          <%= image_tag "black_diamond2.png", width: "35", height: "35", alt: "Toggle Dropdown", id: "dropdownMenu" %>
          <ul>
            <li><%= link_to "Home", root_path %></li>
